<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    style="@style/Widget.SkinCare_TFM.Card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header con imagen, fecha y nivel de riesgo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/analysisImageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_background_dark"
                tools:src="@drawable/ic_launcher_background" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha:"
                        android:textStyle="bold"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/analysisDateText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:textSize="12sp"
                        tools:text="20/04/2025 14:30" />

                    <TextView
                        android:id="@+id/evolutionIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        tools:text="↗"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/riskLevelText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_risk_background"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        tools:text="HIGH" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Confianza:"
                        android:textStyle="bold"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/confidenceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textSize="12sp"
                        tools:text="85%" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="12dp"
            android:background="?attr/colorOutline" />

        <!-- Puntuaciones ABCDE -->
        <TextView
            android:id="@+id/abcdeScoresText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            tools:text="ABCDE: A:2.1 B:1.8 C:2.5 D:1.2 E:0.8 Total:8.4" />

        <!-- Descripción del análisis -->
        <TextView
            android:id="@+id/analysisDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:maxLines="3"
            android:ellipsize="end"
            tools:text="Análisis de lunar: Nivel de riesgo bajo. Bordes regulares y bien definidos. Color uniforme y consistente. Diámetro: Aproximadamente 4.2 mm. Simetría: Alta." />

        <!-- Resumen de evolución -->
        <TextView
            android:id="@+id/evolutionSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:textStyle="italic"
            android:textColor="?attr/colorSecondary"
            android:visibility="gone"
            tools:text="Evolución en 30 días: Tendencia positiva - Mejoría: ALTO → MODERADO"
            tools:visibility="visible" />

        <!-- Recomendación -->
        <TextView
            android:id="@+id/recommendationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:textStyle="italic"
            android:textColor="?attr/colorOnSurfaceVariant"
            tools:text="Recomendación: Monitorizar regularmente. Seguimiento normal cada 6 meses." />

        <!-- Botón de comparación -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/compareButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="end"
            android:text="Comparar"
            android:textSize="12sp"
            android:visibility="gone"
            style="@style/Widget.Material3.Button.TextButton"
            tools:visibility="visible" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>