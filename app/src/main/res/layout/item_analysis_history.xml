<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    style="@style/Widget.SkinCare_TFM.Card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header con imagen y información principal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Imagen del análisis con indicador de riesgo -->
            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="80dp">

                <ImageView
                    android:id="@+id/analysisImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_background_dark"
                    tools:src="@drawable/ic_launcher_background" />

                <!-- Indicador de riesgo superpuesto -->
                <View
                    android:id="@+id/riskIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_gravity="bottom"
                    android:background="?attr/colorPrimary"
                    android:visibility="gone" />

            </FrameLayout>

            <!-- Información principal -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <!-- Score combinado y nivel de riesgo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Score:"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/combinedScoreText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="--"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/evolutionIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        tools:text="↗"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/riskLevelText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Riesgo: --"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- IA y fecha -->
                <TextView
                    android:id="@+id/aiProbabilityText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="IA: -- (Confianza: --)"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/analysisDateText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    tools:text="15/01/2025" />

            </LinearLayout>

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="12dp"
            android:background="?attr/colorOutline" />

        <!-- Análisis ABCDE compacto -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Análisis ABCDE"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Barras de progreso compactas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- A - Asimetría -->
                <LinearLayout
                    android:id="@+id/asymmetryLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:text="A"
                        android:textStyle="bold"
                        android:textSize="12sp" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/asymmetryProgress"
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="8dp"
                        android:max="100"
                        app:indicatorColor="?attr/colorPrimary"
                        app:trackColor="?attr/colorSurfaceVariant" />

                    <TextView
                        android:id="@+id/asymmetryScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/2"
                        android:textSize="10sp"
                        android:minWidth="30dp"
                        android:gravity="end" />

                </LinearLayout>

                <!-- B - Bordes -->
                <LinearLayout
                    android:id="@+id/borderLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:text="B"
                        android:textStyle="bold"
                        android:textSize="12sp" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/borderProgress"
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="8dp"
                        android:max="100"
                        app:indicatorColor="?attr/colorPrimary"
                        app:trackColor="?attr/colorSurfaceVariant" />

                    <TextView
                        android:id="@+id/borderScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/8"
                        android:textSize="10sp"
                        android:minWidth="30dp"
                        android:gravity="end" />

                </LinearLayout>

                <!-- C - Color -->
                <LinearLayout
                    android:id="@+id/colorLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:text="C"
                        android:textStyle="bold"
                        android:textSize="12sp" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/colorProgress"
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="8dp"
                        android:max="100"
                        app:indicatorColor="?attr/colorPrimary"
                        app:trackColor="?attr/colorSurfaceVariant" />

                    <TextView
                        android:id="@+id/colorScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/6"
                        android:textSize="10sp"
                        android:minWidth="30dp"
                        android:gravity="end" />

                </LinearLayout>

                <!-- D - Diámetro -->
                <LinearLayout
                    android:id="@+id/diameterLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:text="D"
                        android:textStyle="bold"
                        android:textSize="12sp" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/diameterProgress"
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="8dp"
                        android:max="100"
                        app:indicatorColor="?attr/colorPrimary"
                        app:trackColor="?attr/colorSurfaceVariant" />

                    <TextView
                        android:id="@+id/diameterScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/5"
                        android:textSize="10sp"
                        android:minWidth="30dp"
                        android:gravity="end" />

                </LinearLayout>

                <!-- E - Evolución (opcional) -->
                <LinearLayout
                    android:id="@+id/evolutionLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:text="E"
                        android:textStyle="bold"
                        android:textSize="12sp" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/evolutionProgress"
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="8dp"
                        android:max="100"
                        app:indicatorColor="?attr/colorPrimary"
                        app:trackColor="?attr/colorSurfaceVariant" />

                    <TextView
                        android:id="@+id/evolutionScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/3"
                        android:textSize="10sp"
                        android:minWidth="30dp"
                        android:gravity="end" />

                </LinearLayout>

            </LinearLayout>

            <!-- Score total ABCDE -->
            <TextView
                android:id="@+id/abcdeTotalScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Score ABCDE Total: --"
                android:textStyle="bold"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Recomendación compacta -->
        <TextView
            android:id="@+id/recommendationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp"
            tools:text="Recomendación: Monitorizar regularmente. Seguimiento normal cada 6 meses." />

        <!-- Resumen de evolución -->
        <TextView
            android:id="@+id/evolutionSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="11sp"
            android:textStyle="italic"
            android:textColor="?attr/colorSecondary"
            android:visibility="gone"
            tools:text="Evolución: Tendencia positiva - Mejoría: ALTO → MODERADO"
            tools:visibility="visible" />

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/compareButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:text="Comparar"
                android:textSize="12sp"
                android:visibility="gone"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                tools:visibility="visible" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/viewDetailsButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Ver Detalles"
                android:textSize="12sp"
                style="@style/Widget.MaterialComponents.Button.TextButton" />

        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>