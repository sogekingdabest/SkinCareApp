<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".login.ForgotPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/logo_skincare"
            android:transitionName="logoImageView"
            android:layout_gravity="start"/>

        <TextView
            android:id="@+id/welcomeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceHeadlineMedium"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            android:text="Bienvenido,"
            android:layout_marginTop="28dp"
            android:textSize="40sp"
            android:transitionName="textTrans"/>

        <TextView
            android:id="@+id/instructionsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rellena los campos para cambiar su contraseña"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="24sp"
            android:transitionName="instructionsTextView"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="13dp"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:id="@+id/emailLabel"
                android:hint="Email"
                android:transitionName="emailEditText"
                style="@style/Widget.SkinCare_TFM.TextInputLayout">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/recuperarButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RECUPERAR"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:textAppearance="?attr/textAppearanceLabelLarge"
                style="@style/Widget.SkinCare_TFM.Button"
                android:transitionName="registerOrLoginButton"/>

            <TextView
                android:id="@+id/loginTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="13dp"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorPrimary"
                android:background="?attr/selectableItemBackground"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:textStyle="bold"
                android:text="¡Vuelve a intentar iniciar sesion!"
                android:transitionName="registerOrLoginEditText"/>
        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>