<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Mole Image -->
        <ImageView
            android:id="@+id/moleImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Main Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/moleImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Title and Body Part -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/moleTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Título del Lunar"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/moleBodyPart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Brazo"
                    android:textSize="12sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:background="@drawable/rounded_background_dark"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- Description -->
            <TextView
                android:id="@+id/moleDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción del lunar"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="8dp" />

            <!-- Metadata Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Analysis Count -->
                <TextView
                    android:id="@+id/analysisCountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 análisis"
                    android:textSize="12sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:drawableStart="@drawable/ic_history"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="12dp"
                    android:background="?android:attr/textColorSecondary"
                    android:layout_marginHorizontal="8dp" />

                <!-- Last Analysis Date -->
                <TextView
                    android:id="@+id/lastAnalysisText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Último: 15/01/2024"
                    android:textSize="12sp"
                    android:textColor="?android:attr/textColorSecondary" />

            </LinearLayout>

            <!-- Created Date -->
            <TextView
                android:id="@+id/createdDateText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Creado: 10/12/2023"
                android:textSize="11sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginTop="2dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>