    <!-- Imagen del cuerpo centrada -->
    <ImageView
        android:id="@+id/frontBodyImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/front_body"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="fitCenter" />

    <!-- Guía horizontal para ajustar la posición de la cabeza -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideHeadTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.04" />  <!-- Ajusta este valor según sea necesario para alinear la cabeza -->

    <!-- Imagen de la cabeza, vinculada al cuerpo y a la guía horizontal -->
    <ImageView
        android:id="@+id/frontHeadImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/front_head"
        app:layout_constraintStart_toStartOf="@id/frontBodyImage"
        app:layout_constraintEnd_toEndOf="@id/frontBodyImage"
        app:layout_constraintTop_toBottomOf="@id/guideHeadTop"
        app:layout_constraintDimensionRatio="H,2:1"
        android:scaleType="fitCenter"/>


</androidx.constraintlayout.widget.ConstraintLayout>