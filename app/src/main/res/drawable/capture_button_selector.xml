<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape android:shape="oval">
            <solid android:color="@color/guidance_ready" />
            <stroke android:width="3dp" android:color="@android:color/white" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="oval">
            <solid android:color="@color/guidance_overlay_background" />
            <stroke android:width="3dp" android:color="@color/guidance_circle_stroke" />
        </shape>
    </item>
</selector>